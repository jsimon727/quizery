/****************
HOW TO USE SECTION
/****************/


.description{
  width: 100%;
  height: 400px;
  background-color: #2C79E1;
  font-family: 'Muli', sans-serif;
  display: block;
}

.how{
   background-color: #363636;
  -webkit-box-shadow: 0px 5px 5px 0px rgba(50, 50, 50, 0.75);
  -moz-box-shadow:    0px 5px 5px 0px rgba(50, 50, 50, 0.75);
  box-shadow:         0px 5px 5px 0px rgba(50, 50, 50, 0.75);
  width: 100%;
  display: block;
  height: 40px;
  padding: 10px 0;
}

.how h2{
  text-align: center;
  padding: 0px;
  color: #F8F8F8;
}

.list{
  width: 90%;
  margin: 0 auto;
  color: white;
  font-size: 12pt;
}

.step{
  width: 20%;
  display: inline-block;
  margin-top: 70px;
  padding: 5px;
  text-align: center;
  }

.step img{
  width: 150px;
}

.step span{
  display: inline-block;
  padding-top: 5%;
}


.step:nth-of-type(2) {
  margin-right: 15%;
  margin-left: 15%;
}
